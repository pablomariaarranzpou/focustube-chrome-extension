{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "2.4.0",
  "default_locale": "en",
  "icons": {
    "128": "128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://www.youtube.com/*",
    "*://m.youtube.com/*"
  ],
  "action": {
    "default_popup": "front.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://www.youtube.com/*",
        "*://m.youtube.com/*"
      ],
      "js": ["content.js"],
      "all_frames": true
    }
  ]
}
